{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest Current",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-vs"],
            // "args": ["${file}::<test_name>"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "_PYTEST_RAISE": "1",
            }
        },
        {
            "name": "Pytest ALL",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "rest_server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["ataskq.server.server:app", "--port", "8080", "--reload"], // "--host", "${env:HOSTNAME}",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "basic_task_queue",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic_task_queue.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "run_in_parallel",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/run_in_parallel.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "run_with_status",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/run_with_status.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "run_with_state_kwargs",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/examples/run_with_state_kwargs.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}
