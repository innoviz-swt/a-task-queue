    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            // "args": ["-k", "test_something"],
            "cwd": "${workspaceFolder}",
            "env": {
                "SOME_VAR": "some_value"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "basic_task_queue",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic_task_queue.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}