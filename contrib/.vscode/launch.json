    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "Pytest Current",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": ["${file}", "-vs"],
            // "args": ["${file}", "-vs"],
            // "args": ["${file}", "-vs", "-k", "<test_name>"],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal"
        },
        {
            "name": "Pytest ALL",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}:$PYTHONPATH"
            },
            "justMyCode": true
        },
        {
            "name": "basic_task_queue",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/basic_task_queue.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "run_multiprocess",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/examples/run_multiprocess.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
    ]
}
